<h2>Lista de categorias: </h2>
<hr>
<a href="/cadastro/categorias/add"><button class="btn btn-success">Add categoria</button></a>
<hr>

{{#each categorias}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{nome}}</h4/>
            <small>{{data}}</small>
            <br>
                <a href="/cadastro/categorias/itens/{{_id}}"><button type="submit" class="btn btn-success mt-2">Vizualizar itens</button></a>
            <form action="/cadastro/categorias/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h4>Nenhuma categoria registrada</h4>
{{/each}}